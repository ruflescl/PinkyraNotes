<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CardViewContainer" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <style name="AppTheme.CardViewContent">
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <style name="AppTheme.CardViewContent.Text">
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="AppTheme.CardViewContent.Text.Large">
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>

    <style name="AppTheme.CardViewContent.Text.Medium">
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="AppTheme.CardViewContent.Text.Small">
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="AppTheme.CardViewContent.ColorIndicator">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_height">@dimen/color_indicator_height</item>
        <item name="android:layout_margin">0dip</item>
    </style>
</resources>
