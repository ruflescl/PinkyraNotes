<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cnocd_card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_large_horizontal_margin"
    android:layout_marginRight="@dimen/activity_large_horizontal_margin"
    android:layout_marginTop="@dimen/activity_large_vertical_margin"
    android:layout_marginBottom="@dimen/activity_large_vertical_margin"
    card_view:cardCornerRadius="@dimen/card_large_radius" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <TextView
            android:id="@+id/cent_txtv_label_color_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_cent_txtv_cor_indicador"
            card_view:layout_constraintBottom_toBottomOf="@+id/cent_spin_color_indicator"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/cent_spin_color_indicator" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/cent_spin_color_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/cent_txtv_label_color_indicator"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:listitem="@android:layout/simple_spinner_dropdown_item" />

        <View
            android:id="@+id/cent_view_color_indicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/view_margin_between"
            android:background="@color/colorAccent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cent_spin_color_indicator" />

        <EditText
            android:id="@+id/cent_eddt_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:maxLines="2"
            android:layout_marginTop="@dimen/view_margin_between"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/cent_view_color_indicator" />


        <EditText
            android:id="@+id/cent_eddt_note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Conteúdo"
            android:minEms="8"
            android:maxEms="16"
            android:layout_marginTop="@dimen/view_margin_between"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/cent_eddt_note_title" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
