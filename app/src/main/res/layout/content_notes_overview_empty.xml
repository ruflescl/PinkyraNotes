<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pinkyra.pinkyranotes.notesoverview.NotesOverviewActivity"
    tools:showIn="@layout/content_notes_overview_master">

    <TextView
        android:id="@+id/cnov_txtv_intro_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_cnov_label_intro_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cnov_txtv_intro_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_cnov_label_intro_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cnov_imgv_intro_add_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnov_txtv_intro_1"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/cnov_imgv_intro_add_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/cnov_txtv_intro_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cnov_txtv_intro_2"
        app:layout_constraintTop_toTopOf="@+id/cnov_txtv_intro_2"
        android:background="@color/colorAccent"
        app:srcCompat="@drawable/ic_add" />

</android.support.constraint.ConstraintLayout>